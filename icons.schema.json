{
    "$id": "https://icons.josemi.xyz/icons.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Icons schema",
    "description": "A JSON schema for icons",
    "type": "object",
    "properties": {
        "version": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "repository": {
            "type": "string"
        },
        "icons": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "version": {
                        "type": "string"
                    },
                    "keywords": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "path": {
                        "type": "string"
                    }
                }
            }
        }
    }
}